    <div class="box" id="heading">
      <h1><%= kindOfDay %>'s ToDo List</h1>
      </div>

    <div class="box">

        <!-- FOR LOOP TO ADD ITEMS INTO OUR TO DO LIST -->
        <%  for (var i = 0; i < newListItems.length; i++){%>
        <div class="item">
          <input type="checkbox">
          <p><%= newListItems[i] %></p>
        </div>
        <%  };%>
        <form class="item" action="/" method="post">
          <input type="text" name="newItem" placeholder="Add Item" autocomplete="off" autofocus>
          <button type="submit" name="button">+</button>
        </form>
    </div>












