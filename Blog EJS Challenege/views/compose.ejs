<%- include('partials/header'); -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">

    <!-- Post Title Area -->
    <span class="asteriskField">* </span><label class="form-text">Title</label>
    <div class="input-group">
      <div class="input-group-addon"><i class="fas fa-file-alt"></i></i></div>
      <input class="form-control" type="text" name="postTitle" required>
    </div>
    <!-- Post Body Area -->
    <span class="asteriskField">* </span><label class="form-text">Post</label>
    <textarea class="form-control" type="text" name="postBody" rows="5" cols="30" required></textarea>

  </div>

  <div><button  class="btn btn-custom btn-text" type="submit" name="button">Publish</button></div>


</form>

<%- include('partials/footer'); -%>
